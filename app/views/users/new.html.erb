<% provide(:title, "Sign Up") %>

<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %> <span class="required"> *Required</span>
      <%= f.text_field :name %>

      <%= f.label :alias %>
      <%= f.text_field :alias %>

      <%= f.label :email %> <span class="required"> *Required</span>
      <%= f.text_field :email %>

      <%= f.label :password %>  <span class="required"> *Minimum length <%= @password_spec[:minimum] %></span>
      <%= f.password_field  :password  %>

      <%= f.label :password_confirmation , "Confirm Password" %>
      <%= f.password_field  :password_confirmation %>

      <div class="row">
        <div class="col-md-3 col-md-offset-3 ">
          <%= f.submit "Create", class: "btn btn-primary" %>
        </div>

        <div class="col-md-3">
            <%= button_tag "Cancel", class: "btn btn-secondary", type: "button" %>
        </div>
      <div>
    <% end %>
  </div>
</div>
